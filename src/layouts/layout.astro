  border-right: none;
}
ul.menu li:hover,
a.active {color: aqua;}
</style>

<script>
  // Vanilla JavaScript for handling the active class
  document.addEventListener('astro:page-load', function(event) {
  // Get the current URL to determine the active page
  var currentUrl = window.location.pathname;

  // Get all menu items (adjust the selector based on your HTML structure)
  var menuItems = document.querySelectorAll('.nav-link');

  // Loop through menu items to find and set the active class
  menuItems.forEach(function(item) {
    // Get the href attribute of the menu item
    var menuItemUrl = item.getAttribute('href');

    // Check if the current URL matches the menu item's href
    if (currentUrl === menuItemUrl) {
      // Add the 'active' class to the matching menu item
      item.classList.add('active');
    } else {
      // Remove the 'active' class from other menu items
      item.classList.remove('active');
    }
  });
});

</script>